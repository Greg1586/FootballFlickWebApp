<div id="videos-page" class="sixteen columns" align="center">
  <div id="show-videos" align="center" class="show-spinner"></div>
</div>

<div id="descriptionbox" class="sixteen columns" align="center">
  <div id="description-box" class="fontstyle">
    <p><%= @description %></p>
  </div>
</div>

<script type="text/javascript">
    lc.settings = { 'account_id':1584 };
    var path = window.location.pathname;
    path = path.substring(8);
    $(document).ready(function () {
        lc({'widget_id':path}).isReady(function () {
            lc(this).getByIndex(0).getPlayer({'player_id':1285, 'width':420, 'height':240}).appendPlayerTo({'id':'show-videos'});
        });
    });
</script>
