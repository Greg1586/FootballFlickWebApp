<!DOCTYPE html>
<html>
<head>
  <title>Footballflick</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--<link href="tutorial1.jpg" type="image/vnd.microsoft.icon" rel="icon">-->
  <!--<link href="tutorial1.jpg" type="image/x-icon" rel="shortcut icon">-->
  <!--<link rel="shortcut icon" href="/Users/scowley/Projects/FootballFlickWebApp/app/assets/images/FootballFlickFavicon.ico">-->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css"/>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="http://edge.liveclicker.net/scripts/jquery.liveclicker.v1-23_c.js"></script>

  <script type="text/javascript">

      lc.settings = { 'account_id':1584 };

      $(document).ready(function(){


          lc({'tag': 'Football'}).isReady(function(){
              var i = 0;
              var maxListLength = 5;
              var listLength = lc(this).length;
              var listOfWidgets = lc(this);
              if (listLength > 0) {
                  while ((i < maxListLength) && (i < listLength))
                  {
                      lc(this).getByIndex(i).getThumbnail({'width' : 260, 'height' : 120})
                              .appendTo($('#video'))
                              .click(function(){
                                  $("#video").empty();
                                  listOfWidgets.getByWidgetId($(this).attr("widget_id")).getPlayer({'player_id': 379, 'width' : 420, 'height' : 240}).appendPlayerTo({'id' : 'video'}).show();
                              });

                      i++;
                  }
              }
          });
      });
  </script>

  <script type="text/javascript">

      lc.settings = { 'account_id':1584 };

      $(document).ready(function(){

          lc({'tag': 'VideoOfTheWeek'}).isReady(function(){
              lc(this).getByIndex(0).getPlayer({'player_id': 379, 'width' : 420, 'height' : 240}).appendPlayerTo({'id' : 'VideoOfTheWeek'});

          });
      });
  </script>

</head>
<body>

<%= yield %>

</body>
</html>
