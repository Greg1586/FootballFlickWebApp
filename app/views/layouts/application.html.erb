  <script type="text/javascript">

      lc.settings = { 'account_id':1584 };

      function loadVideo() {
          if ($('#video').length > 0) {
              var width;
              if (screen.width > 420) {
                  width = 420;
              } else {
                  width = screen.width - 20;
              }
              ;
              lc({'widget_id':'1711429421'}).isReady(function () {
                  lc(this).getByIndex(0).getPlayer({'player_id':379, 'width':width, 'height':240}).appendPlayerTo({'id':'video'});
              });
          }
      }
      $(document).ready(loadVideo);

  </script>
